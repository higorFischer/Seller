<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/productsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sellerSpinner"
        android:layout_marginTop="63dp" />

    <EditText
        android:id="@+id/priceValue"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productsSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lngValue"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-47dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/lngValue"
        android:text="@string/get_location" />

    <EditText
        android:id="@+id/lngValue"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/latValue"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-45dp"
        android:layout_toEndOf="@+id/latValue"
        android:ems="10"
        android:hint="@string/longitude"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/createSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="16dp"
        android:text="@string/create" />

    <EditText
        android:id="@+id/dayValue"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_below="@+id/latValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Day"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/monthValue"
        android:layout_width="83dp"
        android:layout_height="55dp"
        android:layout_below="@+id/latValue"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/dayValue"
        android:ems="10"
        android:hint="Month"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/yearValue"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_below="@+id/latValue"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/monthValue"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/useNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationButton"
        android:layout_marginStart="65dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/yearValue"
        android:text="Now" />

    <EditText
        android:id="@+id/latValue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/latitude"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/sellerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/quantityValue"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceValue"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="numberDecimal" />

</RelativeLayout>